
@model mail_____.Models.FormModel

@{
    ViewBag.Title = "Index";
}

<div class="container">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "well form-horizon" }))
    {
        <fieldset>
            <legend>İletişim Formu</legend>

            <div class="form-group">
                <label class="col-md-4 control-label">Adı Soyadı</label>
                <div class="input-group">
                    <span class="input-group-addon"></span>
                    @Html.TextBoxFor(model => model.AdSoyad,new { @class="form-control",placeholder="Adınız Soyadınız"})
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Email</label>
                <div class="input-group">
                    <span class="input-group-addon"></span>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email Adresiniz" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Mesajınız</label>
                <div class="input-group">
                    <span class="input-group-addon"></span>
                    @Html.TextAreaFor(model => model.Mesaj, new { @class = "form-control", placeholder = "Mesajınız"})
                </div>
            </div>
            <div class="alert alert-success" role="alert">
                Gönderildi
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-warning">Gönder</button>
                </div>
            </div>
        </fieldset>
    }
</div>